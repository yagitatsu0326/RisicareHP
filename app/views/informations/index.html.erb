<div class ="container">
	<div class ="title-box row">
		<h2 class ="col-xs-8 col-xs-offset-2">INFORMATION</h2>
	</div>
	<div class ="body-box">
		<div class ="info-index-box row">
			<% @informations.each do |information| %>
				<div class ="col-xs-12 col-md-4">
					<div class ="row">
						<div class ="col-xs-12">
							<%= information.created_at.strftime('%Y/%m/%d ') %>
						</div>
					</div>
					<div class ="row">
						<div class ="col-xs-12">
							<%= information.title %>
						</div>
					</div>
					<div class ="row">
						<div class ="col-xs-12">
							<%= link_to information_path(information.id) do %>
								<%= attachment_image_tag information, :image, :fill, 300,300, class: "info-image" %>
							<% end %>
						</div>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>