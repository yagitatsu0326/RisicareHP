<div class="main-content col-xs-offset-1 col-xs-10">
	<div class="row">
		<div class="col-lg-8 col-md-12 col-sm-12">
			<%= link_to about_path do %>
				<div class="top-about-box">
					<div class="about-text">
						<h2><ABBR>ABOUT US</ABBR></h2>
						<p>abcdefghijklmnopqrstu</p>
					</div>
				</div>
			<% end %>
		</div>
		<div class="col-lg-4 col-md-12 col-sm-12 clearfix">
			<%= link_to staff_path do %>
				<div class="staff-box">
					<div class="goki-box">
						<div class="goki-img"></div>
						<div class="goki-mask-text">
							<h3>八木　龍弘</h3>
						</div>
					</div>
					<div class="yagi-box">
						<div class="yagi-img"></div>
						<div class="yagi-mask-text">
							<h3>北村　豪希</h3>
						</div>
					</div>
				</div>
			<% end %>
		</div>
		<div class="col-lg-8 col-md-12 col-sm-12">
			 <div class="info-box">
			 	<div class="title">
			 		<h3>Information</h3>
			 	</div>
			 	<table class="index-table table">
				 	<% @informations.each do |information| %>
				 		<tr>
				 			<td>
				 				<%= link_to information_path(information.id) do %>
							 		<div class="info-container row">
									 	<div class="col-lg-4">
									 		<%= attachment_image_tag information, :image, :fill, 150,150, class: "info-image"%>
									 	</div>
									 	<div class="info-text col-lg-8">
									 		<h3><%= information.title %></h3>
									 		<p><%= information.body.truncate(70) %></p>
									 		<p><%= l information.created_at, format: :semi_long %></p>
									 	</div>
									 </div>
								 <% end %>
							 </td>
						</tr>
				 	<% end %>
			 	</table>

			 </div>
		</div>

		<div class="col-lg-4 col-md-12 col-sm-12">
			<div class="event-box">
				<div class="title">
					<h3>Schedule</h3>
				</div>
				<table class="index-table table">
					<% @events.each do |event| %>
							<tr>
								<td>
									<%= link_to event_path(event.id) do %>
										<p>
											<%= l event.start_time, format: :date %><%= l event.start_time, format: :time %>~<%= l event.end_time, format: :time %> <%= event.title %>		
										</p>	
							 		<% end %>
							 	</td>
						 	</tr>
			 		<% end %>
				</table>
			</div>
			<div class="sponsor-box">
				<div class="sponsor-gold">
					<h4><i class="fas fa-circle"></i>Gold Sponsor<i class="fas fa-circle"></i></h4>
					<a href="https://www.u-fsj.jp">
						<div class="freestyle-box"></div>
					</a>
					<a href="http://www.kyoto-isoi.com/">
						<div class="isoi-box"></div>
					</a>
				</div>
				<div class="sponsor-silver">
					<h4><i class="fas fa-circle"></i>Silver Sponsor<i class="fas fa-circle"></i></h4>
					<div class="kitamurastone-box"></div>
				</div>
				<div class="sponsor-bronze">
					<h4><i class="fas fa-circle"></i>Bronze Sponsor<i class="fas fa-circle"></i></h4>
					<a href="https://www.morinogi.co.jp/kyono-odashi/">
						<div class="kyonoodashi-box"></div>
					</a>
				</div>
			</div>
		</div>
	</div>
</div>
