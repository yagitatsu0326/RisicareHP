<div class ="container">
	<div class ="title-box row">
		<h2 class ="col-xs-8 col-xs-offset-2">INFORMATION</h2>
		<div class ="col-xs-8 col-xs-offset-2">
			<%= link_to new_admin_information_path do %>
				<i class="fas fa-plus-square"></i>
			<% end %>
		</div>
	</div>
	<div class ="body-box row">
		<% @informations.each do |information| %>
			<div class ="col-xs-12 col-md-4">
				<div class ="row">
					<div class ="col-xs-12">
						<%= information.created_at.strftime('%Y/%m/%d ') %>
					</div>
				</div>
				<div class ="row">
					<div class ="col-xs-12">
						<%= information.title %>
					</div>
				</div>
				<div class ="row">
					<div class ="col-xs-12">
						<%= link_to admin_information_path(information.id) do %>
							<%= attachment_image_tag information, :image, :fill, 300,300, class: "info-image" %>
						<% end %>
					</div>
				</div>
			</div>
		<% end %>
	</div>
</div>