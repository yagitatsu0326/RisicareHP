<div class="row">
    <div class ="admin-content col-lg-offset-1 col-lg-10 col-xs-12">
        <div class ="body-box">
            <div class ="title-box">
                <span>Risicare</span>
                <h2>ADMIN LOGIN</h2>
            </div>
            <div class ="login-body-container">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                    <div class ="form-group row">
                        <div class ="control-label col-xs-12">
                            <p>管理者名</p>
                            <div class ="form-box"><%= f.text_field :name, autofocus: true, autocomplete: "name" %></div>
                        </div>
                        <div class ="control-label col-xs-12">
                            <p>メールアドレス</p>
                            <div class ="form-box"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
                        </div>
                        <div class ="control-label col-xs-12">
                            <p>パスワード</p>
                            <div class ="form-box"><%= f.password_field :password, autocomplete: "current-password" %></div>
                        </div>
                        <% if devise_mapping.rememberable? %>
                            <div class ="form-text col-xs-12">
                                <%= f.check_box :remember_me %>
                                <lavel>保存しますか?</lavel>
                            </div>
                        <% end %>
                    </div>
                    <div class="form-group row">
                        <div class="button">
                            <%= f.submit "ログイン", class: "btn btn-success" %>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>